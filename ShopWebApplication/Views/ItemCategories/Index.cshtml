@model IEnumerable<ShopWebApplication.Models.Entities.ItemCategory>

@{
    ViewBag.Title = "قائمة التصنيفات الموجودة بالمحل";
}

<h2>قائمة التصنيفات الموجودة بالمحل</h2>

<p>
    @Html.ActionLink("إضافة تصنيف جديد", "Create")
</p>
<table class ="table" dir="rtl" style="width:100%">
    <tr>
        <th align="right" style="width:20%">
            اسم التصنيف
        </th>
        <th align="right" style="width:60%">
            ملاحظات على التصنيف
        </th>
        <th align="right" style="width:20%"></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("نعديل", "Edit", new { id=item.ID }) |
            @Html.ActionLink("تفاصيل", "Details", new { id=item.ID }) |
            @Html.ActionLink("مسح", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
